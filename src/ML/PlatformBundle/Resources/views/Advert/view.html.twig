{# src/ML/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "MLPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block mlplatform_body %}

{# On vérifie qu'une image soit bien associée à l'annonce #}

  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div>
  {% if advert.image is not null %}
  <img
  src="{{ asset(advert.image.webPath) }}"
  alt="{{ advert.image.alt }}"
  />
  {% endif %}
  </div>

  <div>
    <img src="{{ asset('uploads/img/'~ advert.image.url) }}" alt="imgdfdf">
  </div>

  <div class="well">
    {{ advert.content }}
  </div>

  <div>
  {% if not advert.categories.empty %}
    <p>
      Cette annonce est parue dans les catégories suivantes :
      {% for category in advert.categories %}
        {{ category.name }}{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
  </div>

  <p>
    <a href="{{ path('ml_platform_homepage') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('ml_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('ml_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}
